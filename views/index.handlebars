<h1>Task Saver</h1>

<h3>Save the tasks you need to get to later</h3>



<ul>
  {{#each orders}}
  	<li>
  	   <p>ID: {{this.id}}</p>
       <p>Task: {{this.task}}</p>
  	</li>
  {{/each}}
</ul>

<form action="/" method="POST">
	<textarea type="text" name="task"></textarea>

	<button type="submit">Submit</button>
</form>


<script>

$.("form").on("click", function(){

    


    $.post("/tacoJson", function(req, res){

    var infor ={

        taco : $("textarea").val()

    } 

            res.json(infor)
    })


    
})

</script>